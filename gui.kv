# define template widgets
# =========================
<MyButton>:
    font_size: 20
    background_color: 0, 0, 0, 0
    # when pressed, color is white (or black?)
    background_normal: ""
    canvas.before:
        Color:
            rgba: 0.35,0.35,0.35,1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]
<HomeButton>:
    font_size: 20
    color: 1,1,1,1
    background_color: 0,0,0,0
    # to remove the black that mixes with your chosen colour
    background_normal:""
    canvas.before:
        Color:
            rgba: 0.35,0.35,0.35,1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]
    on_release: self.to_home_screen()
    text: 'Home'

<ExitButton>:
    font_size: 20
    color: 1,1,1,1
    background_color: 0,0,0,0
    # to remove the black that mixes with your chosen colour
    background_normal:""
    canvas.before:
        Color:
            rgba: 1,0.15,0,1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]
    text: 'Exit'
    on_release: self.close_app()

<ActionButton>:
    font_size: 30
    color: 1,1,1,1
    background_color: 0,0,0,0
    # _normal is when not pressed _down is when pressed
    background_normal:""
    canvas.before:
        Color:
            rgba: 0,1,0,0.5
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

